server {
    listen 80;
    return 301 https://$host$request_uri;
}

server {

    listen 443;
    server_name demo-helm.forgeddev.com;
    client_max_body_size 200M;

    ssl_certificate          /shop/forged/cloud/nginx/ssl/STAR_forgeddev_com.crt;
    ssl_certificate_key      /shop/forged/cloud/nginx/ssl/forgeddev.key;

    ssl on;
    ssl_session_cache  builtin:1000  shared:SSL:10m;
    ssl_protocols  TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers HIGH:!aNULL:!eNULL:!EXPORT:!CAMELLIA:!DES:!MD5:!PSK:!RC4;
    ssl_prefer_server_ciphers on;

    access_log            /var/log/nginx/app.access.log;

    
    location / {
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		proxy_http_version 1.1;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header Host $host;
		proxy_pass http://localhost:4000;
		proxy_read_timeout 90;
		proxy_redirect http://localhost:4000 https://demo-helm.forgeddev.com;
    }
  }

