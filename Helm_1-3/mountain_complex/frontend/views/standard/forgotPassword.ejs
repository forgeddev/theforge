<!DOCTYPE html>
<html>
  <head>
    <% include ../layout/head %>
  </head>
  <body>
    <% include ../layout/header %>

    <main>

      <div class="row container">
        <div class="col s12 m12">
          <div class="card">
            <div class="card-image">
              <img src="/vendor/mountain_complex/images/main_amber.png">
              <span class="card-title">Forgot Password</span>
            </div>
            <div class="card-content">
              <form autocomplete="off" id="forgotPasswordForm" class="" action="/passwordResetRequest" method="post">
                <div class="row">
                  <div class="input-field col s12">
                    <input id="email" name="email" type="email" class="validate">
                    <label for="email" data-error="invalid" data-success="valid">Email</label>
                  </div>
                </div>
                <div class="card-action">
                  <a href="/login">Login</a>
                  <button class="btn waves-effect waves-light pull-right" type="submit">Request Password Reset</button>
                </div>
              </form>
            </div>
          </div>
        </div>

      </div>
    </main>
    <script type="text/javascript">
    $(document).ready(function() {
      MountainComplexBase.addSubmitHandler('#forgotPasswordForm', '/login');
    });
    </script>

    <% include ../layout/message %>
    <% include ../layout/footer %>
  </body>
</html>
