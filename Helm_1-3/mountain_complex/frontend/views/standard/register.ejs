<!DOCTYPE html>
<html>
  <head>
    <% include ../layout/head %>
  </head>
  <body>
    <% include ../layout/header %>

    <main>

      <div class="row container">
        <div class="col s12 m12">
          <div class="card">
            <div class="card-image">
              <img src="/vendor/mountain_complex/images/main_amber.png">
              <span class="card-title">Register</span>
            </div>
            <div class="card-content">
              <form autocomplete="off" id="loginForm" class="" action="/registerRequest" method="post">
                <div class="row">
                  <div class="input-field col s12">
                    <input id="email" name="email" type="email" class="validate">
                    <label for="email" data-error="invalid" data-success="valid">Email</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <input id="password" name="password" type="password" class="validate">
                    <label for="password">Password</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <input id="password_confirmation" name="password_confirmation" type="password" class="validate">
                    <label for="password_confirmation">Password Confirmation</label>
                  </div>
                </div>
                <div class="card-action">
                  <a href="/home">Home</a>
                  <a href="/login">Login</a>
                  <button class="btn waves-effect waves-light pull-right" type="submit">Register</button>
                </div>
              </form>
            </div>
          </div>
        </div>

      </div>
    </main>
    <script type="text/javascript">
    $(document).ready(function() {
      MountainComplexBase.addSubmitHandler('#loginForm', '/home');
    });
    </script>

    <% include ../layout/footer %>
  </body>
</html>
