<!DOCTYPE html>
<html>
  <head>
    <% include ../layout/head %>
  </head>
  <body>
    <% include ../layout/header %>

    <main>
      <div class="row">

        <div class="col s12">
          <div class="card horizontal">
            <div class="card-stacked">
              <div class="card-content">
                <div class="col s12">
                  <h4>Resource Referral</h4>
                </div>
                <div class="col s12">
                  <a href="/resourceReferral/cards"><i class="fg-light-blue small material-icons">skip_previous</i></a>
                  <a id="resourceReferralMetaDataToggle" href="#"><i class="icon-go small material-icons">info_outline</i></a>
                </div>

                <form autocomplete="off" id="resourceReferralView" class="">
                  <fieldset class="meta-data" style="display: none;">
                    <legend>Meta Data</legend>
                    <div class="row">
                      <div class="input-field col s12 m4">
                        <input id="recordId" name="recordId" type="text" readonly>
                        <label for="recordId">Record ID</label>
                      </div>
                      <div class="input-field col s12 m4">
                        <input id="parentId" name="parentId" type="text" readonly>
                        <label for="parentId">Parent ID</label>
                      </div>
                      <div class="input-field col s12 m4">
                        <input id="isDeleted" name="isDeleted" type="text" readonly>
                        <label for="isDeleted">Is Deleted</label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="input-field col s12 m6">
                        <input id="createdOn" name="createdOn" type="text" readonly>
                        <label for="createdOn">Created On</label>
                      </div>
                      <div class="input-field col s12 m6">
                        <input id="updatedOn" name="updatedOn" type="text" readonly>
                        <label for="updatedOn">Updated On</label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="input-field col s12">
                        <input id="trackingId" name="trackingId" type="text" readonly>
                        <label for="trackingId">Tracking Id</label>
                      </div>
                    </div>
                  </fieldset>
                  <br>

                  <div class="row">
                    <span class="col s12">
                      <span id="when" data-type="datetime"></span>
                    </span>
                  </div>

                  <div class="row">
                    <span class="col s12">
                      <strong>
                        <span id="name"></span>
                      </strong>
                    </span>
                    <span class="col s12 m6">
                      <span id="primaryPhone"></span>
                    </span>
                    <span class="col s12 m6">
                      <span id="alternatePhone"></span>
                    </span>
                    <span class="col s12">
                      <span id="email"></span>
                    </span>
                    <span class="col s12">
                      <span id="address"></span>
                    </span>
                    <span class="col s12">
                      <span id="city"></span> <span id="state"></span> <span id="zip"></span>
                    </span>
                  </div>


                  <div class="row">
                    <span class="col s4">
                      <strong>Focus</strong> <span data-list="true" id="focusType"></span>
                    </span>
                    <span class="col s4">
                      <strong>Progress</strong> <span data-list="true" id="progressType"></span>
                    </span>
                    <span class="col s4">
                      <strong>Outcome</strong> <span data-list="true" id="outcomeType"></span>
                    </span>
                  </div>

                  <div class="row">
                    <span class="col s12">
                      <strong>Summary</strong>
                    </span>
                    <span class="col s12">
                      <span id="summary"></span>
                    </span>
                    <span class="col s12">
                      <strong>Notes</strong>
                    </span>
                    <span class="col s12">
                      <span id="notes"></span>
                    </span>
                  </div>

                  <div class="card-action">
                    <button id="emailResource" class="btn waves-effect waves-light">Email Resource</button>
                  </div>
                </form>
              </div>
            </div>
          </div> <!-- card -->
        </div> <!-- grid -->
      </div> <!-- row -->

      <!-- Add Additional Features Here -->
      <div class="row">
        <% include ../response/card %>
      </div>

    </main>

    <script type="text/javascript">
    $(document).ready(function() {
      var reference = <%-JSON.stringify(reference)%>
      var lists = <%-JSON.stringify(lists)%>

      var resourceReferralModelView = new MountainComplexModelView({
        "model": 'resourceReferral'
      });

      if( reference && reference.model) {
        resourceReferralModelView.load( reference.model, lists);

        $("#emailResource").on("click", function(event){
          event.preventDefault();

          if( reference.parent && reference.model.email) {
            var link = site.base_url + "/response/add/" + reference.model.trackingId;

            var mailOptions = {
              from: 'operations@forgeddev.com'
              , to: reference.model.email
              , subject: "Referral for " + reference.parent.firstName + " " + reference.parent.lastName
              , html:
                  "<h2>Resource Referral</h2>" +
                  "<p>A person has been referred to you for assistance.</p>" +
                  "<p>Please contact them at " + reference.parent.email + " or at " + reference.parent.primaryPhone + " to connect." +
                  "<p>Use this link to update your status: " + link + " </p>" +
                  "<br /><h3><%= constants.program_name %></h3>" +
                  "<p><i><%= constants.email_notice %></i></p>"
            };

            MountainComplexBase.sendMail( mailOptions);
          } else {
            Materialize.toast( "Email not available for Resource", 4000, 'toast-warn');
          }
        });
      }


    });
    </script>

    <% include ../layout/footer %>
  </body>
</html>
