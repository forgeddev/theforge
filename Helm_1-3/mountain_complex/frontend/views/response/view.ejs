<!DOCTYPE html>
<html>
  <head>
    <% include ../layout/head %>
  </head>
  <body>
    <% include ../layout/header %>

    <main>
      <div class="row">

        <div class="col s12">
          <div class="card horizontal">
            <div class="card-stacked">
              <div class="card-content">
                <div class="col s12">
                  <h4>Responses</h4>
                </div>
                <div class="col s12">
                  <a href="/response/cards"><i class="fg-light-blue small material-icons">skip_previous</i></a>
                  <a id="responseMetaDataToggle" href="#"><i class="icon-go small material-icons">info_outline</i></a>
                </div>

                <form autocomplete="off" id="responseView" class="">
                  <fieldset class="meta-data" style="display: none;">
                    <legend>Meta Data</legend>
                    <div class="row">
                      <div class="input-field col s12 m4">
                        <input id="recordId" name="recordId" type="text" readonly>
                        <label for="recordId">Record ID</label>
                      </div>
                      <div class="input-field col s12 m4">
                        <input id="parentId" name="parentId" type="text" readonly>
                        <label for="parentId">Parent ID</label>
                      </div>
                      <div class="input-field col s12 m4">
                        <input id="isDeleted" name="isDeleted" type="text" readonly>
                        <label for="isDeleted">Is Deleted</label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="input-field col s12 m6">
                        <input id="createdOn" name="createdOn" type="text" readonly>
                        <label for="createdOn">Created On</label>
                      </div>
                      <div class="input-field col s12 m6">
                        <input id="updatedOn" name="updatedOn" type="text" readonly>
                        <label for="updatedOn">Updated On</label>
                      </div>
                    </div>
                  </fieldset>
                  <br>

                  <div class="row">
                    <span class="col s12">
                      <strong>Response Type</strong> <span data-list="true" id="responseType"></span>
                    </span>
                    <span class="col s12">
                      <span id="when" data-type="datetime"></span>
                    </span>
                    <span class="col s12">
                      <strong>Resource Contact</strong> <span id="who"></span>
                    </span>
                    <span class="col s12">
                      <strong>Summary</strong>
                    </span>
                    <span class="col s12">
                      <span id="summary"></span>
                    </span>
                    <span class="col s12">
                      <strong>Notes</strong>
                    </span>
                    <span class="col s12">
                      <span id="notes"></span>
                    </span>
                  </div>

                </form>
              </div>
            </div>
          </div> <!-- card -->
        </div> <!-- grid -->
      </div> <!-- row -->

      <!-- Add Additional Features Here -->
      <div class="row">
      </div>

    </main>

    <script type="text/javascript">
    $(document).ready(function() {
      var reference = <%-JSON.stringify(reference)%>
      var lists = <%-JSON.stringify(lists)%>

      var responseModelView = new MountainComplexModelView({
        "model": 'response'
      });

      if( reference && reference.model) {
        responseModelView.load( reference.model, lists);
      }

    });
    </script>

    <% include ../layout/footer %>
  </body>
</html>
