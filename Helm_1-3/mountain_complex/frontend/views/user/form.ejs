<!DOCTYPE html>
<html>
  <head>
    <% include ../layout/head %>
  </head>
  <body>
    <% include ../layout/header %>

    <main>
      <div class="row">

        <div class="col s12">
          <div class="card-panel teal">
            <span class="white-text">
              <strong>Help</strong>
              <p>
                Confirmation password must be match the password field in order to save the user record.
              </p>
            </span>
          </div>
        </div>

        <div class="col s12">
          <div class="card horizontal">
            <div class="card-stacked">
              <div class="card-content">

                <h4>User
                  <span>
                    <a href="/home"><i class="fg-light-blue small material-icons">skip_previous</i></a>
                    <a id="userMetaDataToggle" href="#"><i class="icon-go small material-icons">info_outline</i></a>
                  </span>
                </h4>

                <form autocomplete="off" id="userForm" class="" action="/user/save" method="post">

                  <fieldset class="meta-data" style="display: none;">
                    <legend>Meta Data</legend>
                    <div class="row">
                      <div class="input-field col s12 m6">
                        <input id="recordId" name="recordId" type="text" readonly>
                        <label for="recordId">Record ID</label>
                      </div>
                      <div class="input-field col s12 m6">
                        <input id="isDeleted" name="isDeleted" type="text" readonly>
                        <label for="isDeleted">Is Deleted</label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="input-field col s12 m6">
                        <input id="createdOn" name="createdOn" type="text" readonly>
                        <label for="createdOn">Created On</label>
                      </div>
                      <div class="input-field col s12 m6">
                        <input id="updatedOn" name="updatedOn" type="text" readonly>
                        <label for="updatedOn">Updated On</label>
                      </div>
                    </div>
                  </fieldset>

                  <div class="row">
                    <div class="input-field col s12">
                      <input id="email" name="email" type="email" class="validate">
                      <label for="email" data-error="invalid" data-success="valid">Email</label>
                    </div>
                    <div class="input-field col s12">
                      <input id="password" name="password" type="password">
                      <label for="password">Password</label>
                    </div>
                    <div class="input-field col s12">
                      <input id="password_confirmation" name="password_confirmation" type="password">
                      <label for="password_confirmation">Confirmation Password</label>
                    </div>
                  </div>

              </div>
              <div class="card-action">
                <button class="btn waves-effect waves-light" type="submit">Save</button>
                <a class="btn waves-effect waves-light" href="/user/listing">Back</a>
              </div>
            </form>
          </div>
        </div>
      </div>



    </main>

    <script type="text/javascript">
    $(document).ready(function() {
      var data = <%-JSON.stringify(dataPackage.data)%>

      var userEntryForm = new MountainComplexEntryForm({
        "model": 'user'
      });

      if( data && data.model) {
        userEntryForm.load( data.model);
      }

    });
    </script>

    <% include ../layout/footer %>
  </body>
</html>
