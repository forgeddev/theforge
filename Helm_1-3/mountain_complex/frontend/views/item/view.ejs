<!DOCTYPE html>
<html>
  <head>
    <% include ../layout/head %>
  </head>
  <body>
    <% include ../layout/header %>

    <main>
      <div class="row">

        <div class="col s12">
          <div class="card horizontal">
            <div class="card-stacked">
              <div class="card-content">
                <div class="col s12">
                  <h4>Item</h4>
                </div>
                <div class="col s12">
                  <a href="/item/listing"><i class="fg-light-blue small material-icons">skip_previous</i></a>
                  <a id="itemMetaDataToggle" href="#"><i class="icon-go small material-icons">info_outline</i></a>
                </div>

                <form autocomplete="off" id="itemView" class="">
                  <fieldset class="meta-data" style="display: none;">
                    <legend>Meta Data</legend>
                    <div class="row">
                      <div class="input-field col s12 m6">
                        <input id="recordId" name="recordId" type="text" readonly>
                        <label for="recordId">Record ID</label>
                      </div>
                      <div class="input-field col s12 m6">
                        <input id="isDeleted" name="isDeleted" type="text" readonly>
                        <label for="isDeleted">Is Deleted</label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="input-field col s12 m6">
                        <input id="createdOn" name="createdOn" type="text" readonly>
                        <label for="createdOn">Created On</label>
                      </div>
                      <div class="input-field col s12 m6">
                        <input id="updatedOn" name="updatedOn" type="text" readonly>
                        <label for="updatedOn">Updated On</label>
                      </div>
                    </div>
                  </fieldset>
                  <br>

                  <div class="row">
                    <span class="view-label col s12 m6">Name</span>
                    <span class="col s12 m6" id="name">Name</span>
                  </div>

                  <div class="row">
                    <span class="view-label col s12 m6">Purchased</span>
                    <span class="col s12 m6" id="purchased">Purchased</span>
                  </div>

                  <div class="row">
                    <span class="view-label col s12 m6">Out of Stock</span>
                    <span class="col s12 m6" id="outOfStock">Out of Stock</span>
                  </div>

                  <div class="row">
                    <span class="view-label col s12 m6">Quantity</span>
                    <span class="col s12 m6" id="quantity">Quantity</span>
                  </div>

                  <div class="row">
                    <span class="view-label col s12 m6">Cost</span>
                    <span class="col s12 m6" id="cost">Cost</span>
                  </div>

                </form>
              </div>
            </div>
          </div> <!-- card -->
        </div> <!-- grid -->
      </div> <!-- row -->

      <!-- Add Additional Features Here -->

    </main>

    <script type="text/javascript">
    $(document).ready(function() {
      var reference = <%-JSON.stringify(reference)%>

      var itemModelView = new MountainComplexModelView({
        "model": 'item'
      });

      if( reference && reference.model) {
        itemModelView.load( reference.model);
      }

    });
    </script>

    <% include ../layout/footer %>
  </body>
</html>
