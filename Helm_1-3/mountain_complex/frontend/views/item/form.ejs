<!DOCTYPE html>
<html>
  <head>
    <% include ../layout/head %>
  </head>
  <body>
    <% include ../layout/header %>

    <main>
      <div class="row">

        <div class="col s12">
          <div class="card-panel teal">
            <span class="white-text">
              <strong>Help</strong>
              <p>
                Enter helpful notes here.
              </p>
            </span>
          </div>
        </div>

        <div class="col s12">
          <div class="card horizontal">
            <div class="card-stacked">
              <div class="card-content">

                <h4>Item
                  <span>
                    <a href="/item/listing"><i class="fg-light-blue small material-icons">skip_previous</i></a>
                    <a id="itemMetaDataToggle" href="#"><i class="icon-go small material-icons">info_outline</i></a>
                  </span>
                </h4>

                <form autocomplete="off" id="itemForm" class="" action="/item/save" method="post">

                  <fieldset class="meta-data" style="display: none;">
                    <legend>Meta Data</legend>
                    <div class="row">
                      <div class="input-field col s12 m6">
                        <input id="recordId" name="recordId" type="text" readonly>
                        <label for="recordId">Record ID</label>
                      </div>
                      <div class="input-field col s12 m6">
                        <input id="isDeleted" name="isDeleted" type="text" readonly>
                        <label for="isDeleted">Is Deleted</label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="input-field col s12 m6">
                        <input id="createdOn" name="createdOn" type="text" readonly>
                        <label for="createdOn">Created On</label>
                      </div>
                      <div class="input-field col s12 m6">
                        <input id="updatedOn" name="updatedOn" type="text" readonly>
                        <label for="updatedOn">Updated On</label>
                      </div>
                    </div>
                  </fieldset>

                  <div class="row">
                    <div class="input-field col s12">
                      <input id="name" name="name" type="text" class="validate">
                      <label for="name">Name</label>
                    </div>
                  </div>

                  <div class="row">
                    <div class="input-field col s12">
                      <input id="purchased" name="purchased" type="date" class="validate">
                      <label for="purchased">Purchased</label>
                    </div>
                  </div>

                  <div class="row">
                    <div class="input-field col s12">
                      <input id="outOfStock" name="outOfStock" type="text" class="validate">
                      <label for="outOfStock">Out of Stock</label>
                    </div>
                  </div>

                  <div class="row">
                    <div class="input-field col s12">
                      <input id="quantity" name="quantity" type="number" min="0" max="999999" class="validate">
                      <label for="quantity">Quantity</label>
                    </div>
                  </div>

                  <div class="row">
                    <div class="input-field col s12">
                      <input id="cost" name="cost" type="number" min="0.00" step="0.01" class="validate">
                      <label for="cost">Cost</label>
                    </div>
                  </div>

              </div>
              <div class="card-action">
                <button class="btn waves-effect waves-light" type="submit">Save</button>
                <a class="btn waves-effect waves-light" href="/item/listing">Back</a>
              </div>
            </form>
          </div>
        </div>
      </div>

    </main>

    <script type="text/javascript">
    $(document).ready(function() {
      var reference = <%-JSON.stringify(reference)%>

      var itemEntryForm = new MountainComplexEntryForm({
        "model": 'item'
      });

      if( reference && reference.model) {
        itemEntryForm.load( reference.model);
      }

    });
    </script>

    <% include ../layout/footer %>
  </body>
</html>
