<!DOCTYPE html>
<html>
  <head>
    <% include ../layout/head %>
  </head>
  <body>
    <% include ../layout/header %>

    <main>
      <div class="row">

        <div class="col s12">
          <div class="card horizontal">
            <div class="card-stacked">
              <div class="card-content">

                <h4>Program Referral</h4>
                <span>
                  <a href="/programReferral/cards"><i class="fg-light-blue small material-icons">skip_previous</i></a>
                  <a id="programReferralMetaDataToggle" href="#"><i class="icon-go small material-icons">info_outline</i></a>
                </span>


                <form autocomplete="off" id="programReferralForm" class="" action="/programReferral/save" method="post">

                  <fieldset class="meta-data" style="display: none;">
                    <legend>Meta Data</legend>
                    <div class="row">
                      <div class="input-field col s12 m4">
                        <input id="recordId" name="recordId" type="text" readonly>
                        <label for="recordId">Record ID</label>
                      </div>
                      <div class="input-field col s12 m4">
                        <input id="parentId" name="parentId" type="text" readonly>
                        <label for="parentId">Parent ID</label>
                      </div>
                      <div class="input-field col s12 m4">
                        <input id="isDeleted" name="isDeleted" type="text" readonly>
                        <label for="isDeleted">Is Deleted</label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="input-field col s12 m6">
                        <input id="createdOn" name="createdOn" type="text" readonly>
                        <label for="createdOn">Created On</label>
                      </div>
                      <div class="input-field col s12 m6">
                        <input id="updatedOn" name="updatedOn" type="text" readonly>
                        <label for="updatedOn">Updated On</label>
                      </div>
                    </div>
                  </fieldset>


                  <div class="row">
                    <div class="input-field col s12">
                      <%- include('../layout/dropdown', {
                        "id": "referralSourceType"
                        , "label": "Referral Source Type"
                        , "category": "ProgramReferral"
                        , "group": "referralSourceType"
                      });
                      %>
                    </div>
                  </div>


                  <div class="row">
                    <div class="input-field col s12">
                      <%- include('../layout/dropdown', {
                        "id": "referralOutcomeType"
                        , "label": "Referral Outcome Type"
                        , "category": "ProgramReferral"
                        , "group": "referralOutcomeType"
                      });
                      %>
                    </div>
                  </div>

                  <div class="row">
                    <div class="input-field col s6">
                      <input id="when" name="when" type="date" class="validate">
                      <label class="active" for="when">When</label>
                    </div>
                    <div class="input-field col s6">
                      <input id="whenTime" name="whenTime" type="Time" class="validate">
                      <label class="active" for="whenTime">Time</label>
                    </div>
                  </div>

                  <div class="row">
                    <div class="input-field col s12">
                      <input id="name" name="name" type="text" class="validate">
                      <label for="name">With Who</label>
                    </div>
                  </div>


                  <div class="row">
                    <div class="input-field col s6">
                      <input id="primaryPhone" name="primaryPhone" type="text" class="validate">
                      <label for="primaryPhone">Primary Phone</label>
                    </div>
                    <div class="input-field col s6">
                      <input id="alternatePhone" name="alternatePhone" type="text" class="validate">
                      <label for="alternatePhone">Alternate Phone</label>
                    </div>
                  </div>


                  <div class="row">
                    <div class="input-field col s12">
                      <input id="email" name="email" type="email" class="validate">
                      <label for="email" data-error="invalid" data-success="valid">Email</label>
                    </div>
                  </div>

                  <div class="row">
                    <div class="input-field col s12">
                      <input id="address" name="address" type="text" class="validate">
                      <label for="address">Address</label>
                    </div>
                  </div>

                  <div class="row">
                    <div class="input-field col s4">
                      <input id="city" name="city" type="text" class="validate">
                      <label for="city">City</label>
                    </div>
                    <div class="input-field col s4">
                      <input id="state" name="state" type="text" class="validate">
                      <label for="state">State</label>
                    </div>
                    <div class="input-field col s4">
                      <input id="zip" name="zip" type="text" class="validate">
                      <label for="zip">Zip</label>
                    </div>
                  </div>


                  <div class="row">
                    <div class="input-field col s12">
                      <textarea id="summary" name="summary" class="materialize-textarea"></textarea>
                      <label for="summary">Summary</label>
                    </div>
                  </div>

                  <div class="row">
                    <div class="input-field col s12">
                      <textarea id="notes" name="notes" class="materialize-textarea"></textarea>
                      <label for="notes">Notes</label>
                    </div>
                  </div>


              </div>
              <div class="card-action">
                <button class="btn waves-effect waves-light" type="submit">Save</button>
                <a class="btn waves-effect waves-light" href="/programReferral/cards">Back</a>
              </div>
            </form>
          </div>
        </div>
      </div>

    </main>

    <script type="text/javascript">
    $(document).ready(function() {
      var reference = <%-JSON.stringify(reference)%>

      var programReferralEntryForm = new MountainComplexEntryForm({
        "model": 'programReferral'
      });

      if( reference && reference.model) {
        programReferralEntryForm.load( reference.model);
      } else if( reference && reference.parent){
        $("#programReferralForm #parentId").val(reference.parent.recordId);
      }

      // Update Drop Downs
      $('select').material_select();
    });


    </script>

    <% include ../layout/footer %>
  </body>
</html>
